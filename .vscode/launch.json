{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd",
      "args": [
        "--day=${input:day}",
        "--part=${input:part}",
        "--example=${input:example}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "day",
      "type": "promptString",
      "description": "Day number",
      "default": "1"
    },
    {
      "id": "part",
      "type": "promptString",
      "description": "Part number",
      "default": "1"
    },
    {
      "id": "example",
      "type": "pickString",
      "description": "Use example input?",
      "options": [
        "true",
        "false"
      ],
      "default": "false"
    }
  ]
}